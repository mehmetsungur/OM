@using OM.Entity.Complex.HR
@{
    ViewBag.Title = "HumanResources";
    Layout = "~/Areas/DashBoard/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<UserListVM>
<div class="row mt-2" style="display:none">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-8">
                    <form class="form-inline">
                        <div class="form-group">
                            <label for="inputPassword2" class="sr-only">Arama</label>
                            <input type="search" class="form-control" id="searchTags" name="searchTags" placeholder="Ara...">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="menuFull" style="display:none">
    @foreach (UserListVM c in Model)
    {
        <div class="col-lg-4">
            <div class="text-center card-box">
                <div class="pt-2 pb-2">
                    <img src="@c.Photo" class="rounded-circle img-thumbnail avatar-xl">
                    <h4 class="mt-3"><a href="#" class="text-dark">@c.FName @c.LName</a></h4>
                    <p class="text-muted">@c.RoleName <span> | </span> <span> <a href="#" class="text-pink">@c.Email</a> </span></p>
                    <a class="btn btn-primary btn-sm waves-effect waves-light" href="mailto:@c.Email">Mesaj</a>
                    <button type="button" class="btn btn-success btn-sm waves-effect waves-light" onclick="location.href='@Url.Action("Task", "DashBoard", new { Area = "DashBoard"})'">Personel Kodu: <b>@c.PersonnelCode</b></button>
                    <div class="row mt-4">
                        <div class="col-4">
                            <div class="mt-3">
                                <h4>@c.Created.ToShortDateString()</h4>
                                <p class="mb-0 text-muted text-truncate">İşe Başlama Tarihi</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mt-3">
                                <h4>@c.UserName</h4>
                                <p class="mb-0 text-muted text-truncate">Kullanıcı Adı</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mt-3">
                                <h5>@c.Phone</h5>
                                <p class="mb-0 text-muted text-truncate">Telefon</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Areas/DashBoard/Content/js/Custom/Search.js"></script>
@Html.Partial("_PartialWait")