@model OM.WebUI.Models.EpostaModel

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">İLETİŞİM</h2>
                <h3 class="section-subheading text-muted">Görüş ve Önerileriniz Bizim için Değerlidir.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                @using (Html.BeginForm())
                {
                    <div class="messages" id="form-messages"></div>
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_lastname" style="color: aliceblue">Şirket İsmi</label>
                                    @*<input id="form_lastname" type="text" name="firma" class="form-control" placeholder="Lütfen Geçerli Şirket İsmi Giriniz" required="required">*@
                                    @Html.TextBoxFor(x => x.adSoyad, new { @class = "form-control", @placeholder = "Şirket İsmi", @required = "required" })
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_lastname" style="color: aliceblue">İsim</label>
                                    @*<input id="form_lastname" type="text" name="adSoyad" class="form-control" placeholder="Lütfen Geçerli İsim Giriniz" required="required">*@
                                    @Html.TextBoxFor(x => x.adSoyad, new { @class = "form-control", @placeholder = "İsim", @required = "required" })
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_email" style="color: aliceblue">Email</label>
                                    @*<input id="form_email" type="email" name="email" class="form-control" placeholder="Email Adresi" required="required" data-error="Lütfen Geçerli Email Adresinizi Giriniz">*@
                                    @Html.TextBoxFor(x => x.email, new { @class = "form-control", type = "email", @placeholder = "Email Adresi", @required = "required" })
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_phone" style="color: aliceblue">Telefon</label>
                                    @*<input id="form_phone" type="tel" name="telefon" class="form-control" placeholder="Telefon Numarası" required oninvalid="setCustomValidity('Lütfen Geçerli Telefon Numarası Giriniz')"
                                        onchange="try { setCustomValidity('') } catch (e) {}">*@
                                    @Html.TextBoxFor(x => x.telefon, new { @class = "form-control", @type = "tel", @placeholder = "Telefon Numarası", required = "required", @oninvalid = "setCustomValidity('Lütfen Geçerli Telefon Numarası Giriniz')", @onchange = "try { setCustomValidity('') } catch (e) {}" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="form_message" style="color: aliceblue">Mesaj</label>
                                    @*<textarea id="form_message" name="mesaj" class="form-control" placeholder="Mesaj" required="required" data-error="Lütfen Mesaj Yazınız"></textarea>*@
                                    @Html.TextAreaFor(x => x.mesaj, new { @class = "form-control", @placeholder = "Mesaj", @required = "required" })
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-default" value="Gönder">
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-12" style="color:floralwhite">
                        <span class="fa fa-map" style="font-size:16px; color:lightyellow"></span>
                        Bahçekapı Mahallesi, 06797 Etimesgut/Ankara
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="color:floralwhite">
                        <span class="fa fa-phone" style="font-size:16px; color:lightyellow"></span>
                        <a href="tel:+903122780033"> (312) 278 00 33</a>
                    </div>
                </div>
                <br>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12235.228925563448!2d32.73001784395323!3d39.945701370761235!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d337e34964f2ab%3A0x14765ccbef707753!2sOlgun+LPG+-+Ankara+%C5%9Ea%C5%9Fmaz!5e0!3m2!1str!2str!4v1545052901421" width="100%" height="453" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>