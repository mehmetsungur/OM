@using OM.Entity.Complex.Product
@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/DashBoard/Views/Shared/_Layout.cshtml";
}
@model List<ProductListVM>
<div class="row mt-2">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-sm-4">
                    <a href="#CreateProduct" class="btn btn-danger waves-effect waves-light"
                       data-animation="makeway" data-plugin="custommodal" data-overlaycolor="#72a3c1">
                        <i class="mdi mdi-plus-circle mr-1"></i> Yeni Ürün
                    </a>
                </div>
                <div class="mt-2">
                </div>
                <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Seri Numarası</th>
                            <th>Çalışma Yüksekliği</th>
                            <th>Taşıma Kapasitesi</th>
                            <th>Periyodik Kontrol</th>
                            <th>Durum</th>
                            <th>Açıklama</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProductListVM p in Model)
                        {
                            <tr>
                                <td><span id="spnBrandName">@p.BrandName</span></td>
                                <td><span id="spnModel">@p.Model</span></td>
                                <td><span id="spnSerial">@p.Serial</span></td>
                                <td><span id="spnWorkHeight">@p.WorkHeight</span></td>
                                <td><span id="spnWorkCapacity">@p.WorkCapacity</span></td>
                                <td><span id="spnPeriodic">@p.Periodic</span></td>
                                <td><span id="spnState">@p.State</span></td>
                                <td><span id="spnDescription">@p.Description</span></td>
                                <td>
                                    <img id="imgProductEdit" src="~/Areas/DashBoard/Content/img/Custom/DataTable/edit.png" style="width:20px;" ProductId="@p.Id" />
                                </td>
                                <td>
                                    <img id="imgProductDelete" src="~/Areas/DashBoard/Content/img/Custom/DataTable/delete.png" style="width:20px;" ProductId="@p.Id" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="CreateProduct" class="modal-demo">
    <button type="button" class="close" onclick="Custombox.modal.close();">
        <span>&times;</span><span class="sr-only"></span>
    </button>
    <h4 class="custom-modal-title">Yeni Müşteri Ekle</h4>
    <div class="custom-modal-text text-left">
        <form id="frmProduct">
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Marka *</label>
                    <input type="text" class="form-control" id="txtProductBrandName" name="txtProductBrandName" placeholder="Marka" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Model *</label>
                    <input type="text" class="form-control" id="txtProductModel" name="txtProductModel" placeholder="Model" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Seri Numarası *</label>
                    <input type="text" class="form-control" id="txtProductSerial" name="txtProductSerial" placeholder="Seri Numarası" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Çalışma Yüksekliği *</label>
                    <input type="text" class="form-control" id="txtProductWorkHeight" name="txtProductWorkHeight" placeholder="Çalışma Yüksekliği" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Taşıma Kapasitesi *</label>
                    <input type="text" class="form-control" id="txtProductWorkCapacity" name="txtProductWorkCapacity" placeholder="Taşıma Kapasitesi" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Periyodik Kontrol *</label>
                    <input type="text" class="form-control" id="txtProductPeriodic" name="txtProductPeriodic" placeholder="Periyodik Kontrol" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Durum *</label>
                    <input type="text" class="form-control" id="txtProductState" name="txtProductState" placeholder="Durum" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Açıklama *</label>
                    <textarea class="form-control" id="txtProductDescription" name="txtProductDescription" rows="3" placeholder="Açıklama" required></textarea>
                </div>
            </div>
            <div class="text-right">
                <button type="button" id="btnProductSave" class="btn btn-success waves-effect waves-light">Kaydet</button>
            </div>
        </form>
    </div>
</div>
<div class="portfolio-modal modal fade" id="divProductEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mx-auto">
                        <div class="modal-header">
                            <h4 class="text-uppercase" style="color:forestgreen;">ÜRÜN GÜNCELLE</h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="hfProductIdEdit" />
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Marka</label>
                                    <input type="text" class="form-control" id="txtProductEditBrandName" placeholder="Marka" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label>Model</label>
                                    <input type="text" class="form-control" id="txtProductEditModel" placeholder="Model" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Seri Numarası</label>
                                    <input type="text" class="form-control" id="txtProductEditSerial" placeholder="Seri Numarası" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Çalışma Yüksekliği</label>
                                    <input type="text" class="form-control" id="txtProductEditWorkHeight" placeholder="Çalışma Yüksekliği" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label>Taşıma Kapasitesi</label>
                                    <input type="text" class="form-control" id="txtProductEditWorkCapacity" placeholder="Taşıma Kapasitesi" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Periyodik Kontrol</label>
                                    <input type="text" class="form-control" id="txtProductEditPeriodic" placeholder="Periyodik Kontrol" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Durum</label>
                                    <input type="text" class="form-control" id="txtProductEditState" placeholder="Durum" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Açıklama</label>
                                    <textarea class="form-control" id="txtProductEditDescription" rows="3" placeholder="Açıklama" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer pull-right">
                            <button id="btnProductUpdate" type="button" class="btn btn-fill btn-success">Güncelle</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>