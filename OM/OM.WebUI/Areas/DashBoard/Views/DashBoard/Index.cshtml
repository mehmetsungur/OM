@using OM.Entity.Complex.Customer.Project
@{
    ViewBag.Title = "Agenda";
    Layout = "~/Areas/DashBoard/Views/Shared/_Layout.cshtml";
}
@model List<ProjectListVM>

<div class="row mt-2">
    <div class="col-md-6 col-xl-3">
        <div class="widget-rounded-circle card-box">
            <div class="row">
                <div class="col-6">
                    <div class="avatar-lg rounded-circle bg-soft-primary border-primary border">
                        <i class="fe-heart font-22 avatar-title text-primary"></i>
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-right">
                        <h3 class="text-dark mt-1"><span data-plugin="counterup">@ViewBag.TotalPrice</span> ₺</h3>
                        <p class="text-muted mb-1 text-truncate">Toplam Tutar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="widget-rounded-circle card-box">
            <div class="row">
                <div class="col-6">
                    <div class="avatar-lg rounded-circle bg-soft-success border-success border">
                        <i class="fe-shopping-cart font-22 avatar-title text-success"></i>
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-right">
                        <h3 class="text-dark mt-1"><span data-plugin="counterup">@ViewBag.ProjectCount</span></h3>
                        <p class="text-muted mb-1 text-truncate">Toplam Proje</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="widget-rounded-circle card-box">
            <div class="row">
                <div class="col-6">
                    <div class="avatar-lg rounded-circle bg-soft-info border-info border">
                        <i class="fe-bar-chart-line- font-22 avatar-title text-info"></i>
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-right">
                        <h3 class="text-dark mt-1"><span data-plugin="counterup">@ViewBag.CustomerCount</span></h3>
                        <p class="text-muted mb-1 text-truncate">Toplam Müşteri Portföyü</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="widget-rounded-circle card-box">
            <div class="row">
                <div class="col-6">
                    <div class="avatar-lg rounded-circle bg-soft-warning border-warning border">
                        <i class="fe-eye font-22 avatar-title text-warning"></i>
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-right">
                        <h3 class="text-dark mt-1"><span data-plugin="counterup">@ViewBag.MeetCount</span></h3>
                        <p class="text-muted mb-1 text-truncate">Toplam Görüşme</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <div class="card-widgets">
                    <a href="javascript: void(0);" data-toggle="reload">
                        <i class="mdi mdi-refresh"></i>
                    </a>
                    <a data-toggle="collapse" href="#cardCollpase1" role="button"
                       aria-expanded="false" aria-controls="cardCollpase1">
                        <i class="mdi mdi-minus"></i>
                    </a>
                    <a href="javascript: void(0);" data-toggle="remove">
                        <i class="mdi mdi-close"></i>
                    </a>
                </div>
                <h4 class="header-title mb-0">Günlük Rapor</h4>
                <div id="cardCollpase1" class="collapse pt-3 show">
                    <div class="text-center">
                        <div class="row mt-2">
                            <div class="col-4">
                                <h3 data-plugin="counterup">@ViewBag.MeetCountDaily</h3>
                                <p class="text-muted font-13 mb-0 text-truncate">Görüşme</p>
                            </div>
                            <div class="col-4">
                                <h3 data-plugin="counterup">@ViewBag.CustomerCountDaily</h3>
                                <p class="text-muted font-13 mb-0 text-truncate">Müşteri</p>
                            </div>
                            <div class="col-4">
                                <h3 data-plugin="counterup">@ViewBag.ProjectCountDaily</h3>
                                <p class="text-muted font-13 mb-0 text-truncate">Proje</p>
                            </div>
                        </div>
                        <div id="morris-donut-example" style="height: 270px;"
                             class="morris-chart mt-3">
                            <input type="hidden" id="TotalPriceDaily" value="@ViewBag.TotalPriceDaily" />
                            <input type="hidden" id="TotalPriceDailyCavcu" value="@ViewBag.TotalPriceDailyCavcu" />
                            <input type="hidden" id="TotalPriceDailyOorkun" value="@ViewBag.TotalPriceDailyOorkun" />

                            <input type="hidden" id="TotalPriceMonthCavcuJan" value="@ViewBag.TotalPriceMonthCavcuJan" />
                            <input type="hidden" id="TotalPriceMonthCavcuFeb" value="@ViewBag.TotalPriceMonthCavcuFeb" />
                            <input type="hidden" id="TotalPriceMonthCavcuMar" value="@ViewBag.TotalPriceMonthCavcuMar" />
                            <input type="hidden" id="TotalPriceMonthCavcuApr" value="@ViewBag.TotalPriceMonthCavcuApr" />
                            <input type="hidden" id="TotalPriceMonthCavcuMay" value="@ViewBag.TotalPriceMonthCavcuMay" />
                            <input type="hidden" id="TotalPriceMonthCavcuJune" value="@ViewBag.TotalPriceMonthCavcuJune" />
                            <input type="hidden" id="TotalPriceMonthCavcuJuly" value="@ViewBag.TotalPriceMonthCavcuJuly" />
                            <input type="hidden" id="TotalPriceMonthCavcuAgus" value="@ViewBag.TotalPriceMonthCavcuAgus" />
                            <input type="hidden" id="TotalPriceMonthCavcuSep" value="@ViewBag.TotalPriceMonthCavcuSep" />
                            <input type="hidden" id="TotalPriceMonthCavcuOct" value="@ViewBag.TotalPriceMonthCavcuOct" />
                            <input type="hidden" id="TotalPriceMonthCavcuNov" value="@ViewBag.TotalPriceMonthCavcuNov" />
                            <input type="hidden" id="TotalPriceMonthCavcuDec" value="@ViewBag.TotalPriceMonthCavcuDec" />

                            <input type="hidden" id="TotalPriceMonthOorkunJan" value="@ViewBag.TotalPriceMonthOorkunJan" />
                            <input type="hidden" id="TotalPriceMonthOorkunFeb" value="@ViewBag.TotalPriceMonthOorkunFeb" />
                            <input type="hidden" id="TotalPriceMonthOorkunMar" value="@ViewBag.TotalPriceMonthOorkunMar" />
                            <input type="hidden" id="TotalPriceMonthOorkunApr" value="@ViewBag.TotalPriceMonthOorkunApr" />
                            <input type="hidden" id="TotalPriceMonthOorkunMay" value="@ViewBag.TotalPriceMonthOorkunMay" />
                            <input type="hidden" id="TotalPriceMonthOorkunJune" value="@ViewBag.TotalPriceMonthOorkunJune" />
                            <input type="hidden" id="TotalPriceMonthOorkunJuly" value="@ViewBag.TotalPriceMonthOorkunJuly" />
                            <input type="hidden" id="TotalPriceMonthOorkunAgus" value="@ViewBag.TotalPriceMonthOorkunAgus" />
                            <input type="hidden" id="TotalPriceMonthOorkunSep" value="@ViewBag.TotalPriceMonthOorkunSep" />
                            <input type="hidden" id="TotalPriceMonthOorkunOct" value="@ViewBag.TotalPriceMonthOorkunOct" />
                            <input type="hidden" id="TotalPriceMonthOorkunNov" value="@ViewBag.TotalPriceMonthOorkunNov" />
                            <input type="hidden" id="TotalPriceMonthOorkunDec" value="@ViewBag.TotalPriceMonthOorkunDec" />

                            <input type="hidden" id="TotalPriceYearCavcu2017" value="@ViewBag.TotalPriceYearCavcu2017" />
                            <input type="hidden" id="TotalPriceYearCavcu2018" value="@ViewBag.TotalPriceYearCavcu2018" />
                            <input type="hidden" id="TotalPriceYearCavcu2019" value="@ViewBag.TotalPriceYearCavcu2019" />
                            <input type="hidden" id="TotalPriceYearCavcu2020" value="@ViewBag.TotalPriceYearCavcu2020" />

                            <input type="hidden" id="TotalPriceYearOorkun2017" value="@ViewBag.TotalPriceYearOorkun2017" />
                            <input type="hidden" id="TotalPriceYearOorkun2018" value="@ViewBag.TotalPriceYearOorkun2018" />
                            <input type="hidden" id="TotalPriceYearOorkun2019" value="@ViewBag.TotalPriceYearOorkun2019" />
                            <input type="hidden" id="TotalPriceYearOorkun2020" value="@ViewBag.TotalPriceYearOorkun2020" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <div class="card-widgets">
                    <a href="javascript: void(0);" data-toggle="reload">
                        <i class="mdi mdi-refresh"></i>
                    </a>
                    <a data-toggle="collapse" href="#cardCollpase3" role="button"
                       aria-expanded="false" aria-controls="cardCollpase3">
                        <i class="mdi mdi-minus"></i>
                    </a>
                    <a href="javascript: void(0);" data-toggle="remove">
                        <i class="mdi mdi-close"></i>
                    </a>
                </div>
                <h4 class="header-title mb-0">Aylık Rapor</h4>
                <div id="cardCollpase3" class="collapse pt-3 show">
                    <div class="text-center">
                        <div class="row mt-2">
                            <div class="col-6">
                                <table>
                                    <tr>
                                        <td><img class="d-flex align-self-center mr-3 rounded-circle" src="~/Areas/DashBoard/Content/img/Custom/Users/3.jpg" height="50" width="50"></td>
                                        <td><h3 data-plugin="counterup">@ViewBag.TotalPriceMonthCavcu </h3></td>
                                        <td><b>₺</b></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table>
                                    <tr>
                                        <td><img class="d-flex align-self-center mr-3 rounded-circle" src="~/Areas/DashBoard/Content/img/Custom/Users/4.jpg" height="50" width="50"></td>
                                        <td><h3 data-plugin="counterup">@ViewBag.TotalPriceMonthOorkun </h3></td>
                                        <td><b>₺</b></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div id="morris-bar-example" style="height: 283px;"
                             class="morris-chart mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <div class="card-widgets">
                    <a href="javascript: void(0);" data-toggle="reload">
                        <i class="mdi mdi-refresh"></i>
                    </a>
                    <a data-toggle="collapse" href="#cardCollpase2" role="button"
                       aria-expanded="false" aria-controls="cardCollpase2">
                        <i class="mdi mdi-minus"></i>
                    </a>
                    <a href="javascript: void(0);" data-toggle="remove">
                        <i class="mdi mdi-close"></i>
                    </a>
                </div>
                <h4 class="header-title mb-0">Yıllık Rapor</h4>
                <div id="cardCollpase2" class="collapse pt-3 show">
                    <div class="text-center">
                        <div class="row mt-2">
                            <div class="col-6">
                                <table>
                                    <tr>
                                        <td><img class="d-flex align-self-center mr-3 rounded-circle" src="~/Areas/DashBoard/Content/img/Custom/Users/3.jpg" height="50" width="50"></td>
                                        <td><h3 data-plugin="counterup">@ViewBag.TotalPriceYearCavcu </h3></td>
                                        <td><b>₺</b></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table>
                                    <tr>
                                        <td><img class="d-flex align-self-center mr-3 rounded-circle" src="~/Areas/DashBoard/Content/img/Custom/Users/4.jpg" height="50" width="50"></td>
                                        <td><h3 data-plugin="counterup">@ViewBag.TotalPriceYearOorkun </h3></td>
                                        <td><b>₺</b></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div id="morris-area-with-dotted" style="height: 283px;"
                             class="morris-chart mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-widgets">
                    <a href="javascript: void(0);" data-toggle="reload">
                        <i class="mdi mdi-refresh"></i>
                    </a>
                    <a data-toggle="collapse" href="#cardCollpase4" role="button"
                       aria-expanded="false" aria-controls="cardCollpase4">
                        <i class="mdi mdi-minus"></i>
                    </a>
                    <a href="javascript: void(0);" data-toggle="remove">
                        <i class="mdi mdi-close"></i>
                    </a>
                </div>
                <h4 class="header-title mb-0">Projeler</h4>
                <div id="cardCollpase4" class="collapse pt-3 show">
                    <div class="table-responsive">
                        <table class="table table-centered table-borderless mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Personel</th>
                                    <th>Şirket</th>
                                    <th>Model</th>
                                    <th>Başlama Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                    <th>Fatura Tarihi</th>
                                    <th>Fatura Numarası</th>
                                    <th>Tutar</th>
                                    <th>Ödeme Durumu</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ProjectListVM pro in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="avatar-group">
                                                <a href="javascript: void(0);" class="avatar-group-item"
                                                   data-toggle="tooltip" data-placement="top" title=""
                                                   data-original-title="Çağlar AVCU">
                                                    <img src="@pro.Personnel" class="rounded-circle avatar-xs" />
                                                </a>
                                            </div>
                                        </td>
                                        <td>@pro.CompanyName</td>
                                        <td>@pro.Model</td>
                                        <td>@pro.StartDate.ToShortDateString()</td>
                                        <td>@pro.EndDate.ToShortDateString()</td>
                                        <td>@pro.BillDate.ToShortDateString()</td>
                                        <td>@pro.BillNumber</td>
                                        <td>@pro.Price ₺</td>
                                        <td>
                                            @{
                                                if (pro.IsPay)
                                                {
                                                    <span class="badge font-14 bg-soft-success text-success p-1" IsPayState="true">Ödeme Alındı</span>
                                                }
                                                else
                                                {
                                                    <span class="badge font-14 bg-soft-danger text-danger p-1" IsPayState="false">Ödeme Alınmadı</span>
                                                }
                                            }
                                        </td>
                                        <td>@pro.Description</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>