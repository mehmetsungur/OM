@{
    ViewBag.Title = "Agenda";
    Layout = "~/Areas/DashBoard/Views/Shared/_Layout.cshtml";
}
<div class="row mt-2" style="display:none">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3">
                        <a href="#" data-toggle="modal" data-target="#add-category" class="btn btn-lg font-16 btn-primary btn-block  ">
                            <i class="mdi mdi-plus-circle-outline"></i> Yeni Etkinlik Ekle
                        </a>
                        <div id="external-events" class="m-t-20">
                            <br>
                            <p class="text-muted">Drag and drop your event or click in the calendar</p>
                            <div class="external-event bg-success" data-class="bg-success">
                                <i class="mdi mdi-checkbox-blank-circle mr-2 vertical-middle"></i>Etkinlik 1
                            </div>
                            <div class="external-event bg-info" data-class="bg-info">
                                <i class="mdi mdi-checkbox-blank-circle mr-2 vertical-middle"></i>Etkinlik 2
                            </div>
                            <div class="external-event bg-warning" data-class="bg-warning">
                                <i class="mdi mdi-checkbox-blank-circle mr-2 vertical-middle"></i>Etkinlik 3
                            </div>
                            <div class="external-event bg-danger" data-class="bg-danger">
                                <i class="mdi mdi-checkbox-blank-circle mr-2 vertical-middle"></i>Etkinlik 4
                            </div>
                        </div>
                        <div class="custom-control custom-checkbox mt-3">
                            <input type="checkbox" class="custom-control-input" id="drop-remove">
                            <label class="custom-control-label" for="drop-remove">Sürükledikten Sonra Listeden Kaldır</label>
                        </div>
                        <div class="mt-5 d-none d-xl-block">
                            <h5 class="text-center">Nasıl Çalışır ?</h5>
                            <ul class="pl-3">
                                <li class="text-muted mb-3">
                                    Öncelik etkinliklerinizi ekleyerek etkinlik listenizi yapınız.
                                </li>
                                <li class="text-muted mb-3">
                                    Oluşturduğunuz etkinlik listesinden seçtiğiniz veriyi sürükleyerek takvimde istediğiniz yere yerleştiriniz.
                                </li>
                                <li class="text-muted mb-3">
                                    Yerleştirdiğiniz etkinliği istediğiniz zaman silebilir veya güncelleyebilirsiniz.
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="event-modal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header pr-4 pl-4 border-bottom-0 d-block">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Yeni Olay Ekle</h4>
                        </div>
                        <div class="modal-body pt-3 pr-4 pl-4">
                        </div>
                        <div class="text-right pb-4 pr-4">
                            <button type="button" class="btn btn-light " data-dismiss="modal">Kapat</button>
                            <button type="button" class="btn btn-success save-event">Oluştur</button>
                            <button type="button" class="btn btn-danger delete-event" data-dismiss="modal"> Sil </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="add-category" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header border-bottom-0 d-block">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Kategori Ekle</h4>
                        </div>
                        <div class="modal-body p-4">
                            <form>
                                <div class="form-group">
                                    <label class="control-label">Kategori İsmi</label>
                                    <input class="form-control form-white" placeholder="Kategori Giriniz"
                                           type="text" name="category-name" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Kategori Rengi Seç</label>
                                    <select class="form-control form-white" data-placeholder="Renk Seçiniz..."
                                            name="category-color">
                                        <option value="primary">Öncelikli</option>
                                        <option value="success">Onaylı</option>
                                        <option value="danger">Acil</option>
                                        <option value="info">Bilgi</option>
                                        <option value="warning">Uyarı</option>
                                        <option value="dark">Sonraki</option>
                                    </select>
                                </div>
                            </form>
                            <div class="text-right">
                                <button type="button" class="btn btn-light " data-dismiss="modal">Kapat</button>
                                <button type="button" class="btn btn-primary ml-1   save-category" data-dismiss="modal"> Kaydet </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_PartialWait")