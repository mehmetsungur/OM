@using OM.Entity.Complex.Customer.Company
@{
    ViewBag.Title = "Company";
    Layout = "~/Areas/DashBoard/Views/Shared/_Layout.cshtml";
}
@model List<CompanyListVM>
<div class="row mt-2" style="display:none">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-8">
                    <form class="form-inline">
                        <div class="form-group">
                            <label for="inputPassword2" class="sr-only">Search</label>
                            <input type="search" class="form-control" id="searchTags" name="searchTags" placeholder="Arama">
                        </div>
                    </form>
                </div>
                <div class="col-lg-4">
                    <div class="text-lg-right mt-3 mt-lg-0">
                        <a href="#CreateCompany" class="btn btn-danger waves-effect waves-light"
                           data-animation="makeway" data-plugin="custommodal" data-overlaycolor="#72a3c1">
                            <i class="mdi mdi-plus-circle mr-1"></i> Yeni Şirket
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="display:none">
    <div class="col-xl-12 order-xl-1 order-2" id="menuFull">
        @foreach (CompanyListVM cm in Model)
        {
            <div class="row align-items-center">
                <div class="col-sm-4">
                    <div class="media">
                        <img class="d-flex align-self-center mr-3 rounded-circle" src="@cm.Logo" alt="Generic placeholder image" height="80" width="80">
                        <div class="media-body">
                            <h4 class="mt-0 mb-2 font-16"><span id="spnName">@cm.Name</span></h4>
                            <p class="mb-1"><b>Location:</b> <span id="spnDistrict">@cm.District</span>, <span id="spnCity">@cm.City</span></p>
                            <p class="mb-0"><b>Açıklama:</b> <span id="spnDescription">@cm.Description</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <p class="mb-1 mt-3 mt-sm-0"><i class="mdi mdi-email mr-1"></i> <span id="spnEmail">@cm.Email</span></p>
                    <p class="mb-0"><i class="mdi mdi-phone-classic mr-1"></i> <span id="spnPhone">@cm.Phone</span></p>
                </div>
                <div class="col-sm-2">
                    <div class="text-center mt-3 mt-sm-0">
                        <div class="badge font-14 bg-soft-danger text-dark p-1"><span id="spnState">@cm.State</span></div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="text-sm-right">
                        <img id="imgCompanyEdit" src="~/Areas/DashBoard/Content/img/Custom/DataTable/edit2.png" style="width:20px;" CompanyId="@cm.Id" class="avatar-group-item"
                             data-toggle="tooltip" data-placement="top" title=""
                             data-original-title="Düzenle" />
                        <img id="imgCompanyDelete" src="~/Areas/DashBoard/Content/img/Custom/DataTable/delete2.png" style="width:20px;" CustomerId="@cm.Id" class="avatar-group-item"
                             data-toggle="tooltip" data-placement="top" title=""
                             data-original-title="Sil" />
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
    @*<div class="col-xl-4 order-xl-2 order-1">
            <div class="card-box">
                <h4 class="header-title mb-3">Status Charts</h4>
                <div class="text-center">
                    <div id="status-chart"></div>
                    <p class="text-muted font-15 font-family-secondary mb-0 mt-3">
                        <span class="mx-2"><i class="mdi mdi-checkbox-blank-circle text-info"></i> Hot</span>
                        <span class="mx-2"><i class="mdi mdi-checkbox-blank-circle text-primary"></i> Cold</span>
                    </p>
                </div>
            </div>
        </div>*@
</div>
<div id="CreateCompany" class="modal-demo">
    <button type="button" class="close" onclick="Custombox.modal.close();">
        <span>&times;</span><span class="sr-only"></span>
    </button>
    <h4 class="custom-modal-title">Yeni Şirket Ekle</h4>
    <div class="custom-modal-text text-left">
        <form id="frmCompany">
            <div class="row">
                <div class="form-group col-md-6">
                    <label>Logo *</label>
                    <input type="file" id="fuLogo">
                </div>
                <div class="form-group col-md-6">
                    <label>Şirket *</label>
                    <input type="text" class="form-control" id="txtCompanyName" name="txtCompanyName" placeholder="Şirket" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label>Şehir *</label>
                    <input type="text" class="form-control" id="txtCompanyCity" name="txtCompanyCity" placeholder="Şehir" required>
                </div>
                <div class="form-group col-md-6">
                    <label>İlçe *</label>
                    <input type="text" class="form-control" id="txtCompanyDistrict" name="txtCompanyDistrict" placeholder="İlçe" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Email *</label>
                    <input type="email" class="form-control" id="txtCompanyEmail" name="txtCompanyEmail" placeholder="Email" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Telefon *</label>
                    <input type="text" class="form-control" id="txtCompanyPhone" name="txtCompanyPhone" placeholder="Telefon" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Durum *</label>
                    <input type="text" class="form-control" id="txtCompanyState" name="txtCompanyState" placeholder="Durum" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Açıklama *</label>
                    <textarea class="form-control" id="txtCompanyDescription" name="txtCompanyDescription" rows="3" placeholder="Açıklama" required></textarea>
                </div>
            </div>
            <div class="text-right">
                <button type="button" id="btnCompanySave" class="btn btn-success waves-effect waves-light">Kaydet</button>
            </div>
        </form>
    </div>
</div>
<div class="portfolio-modal modal fade" id="divCompanyEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mx-auto">
                        <div class="modal-header">
                            <h4 class="text-uppercase" style="color:forestgreen;">ŞİRKET GÜNCELLE</h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="hfCompanyIdEdit" />
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Şirket</label>
                                    <input type="text" class="form-control" id="txtCompanyEditName" placeholder="Şirket" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Şehir</label>
                                    <input type="text" class="form-control" id="txtCompanyEditCity" placeholder="Şehir" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>İlçe</label>
                                    <input type="text" class="form-control" id="txtCompanyEditDistrict" placeholder="İlçe" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label>Email</label>
                                    <input type="email" class="form-control" id="txtCompanyEditEmail" placeholder="Email" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Telefon</label>
                                    <input type="text" class="form-control" id="txtCompanyEditPhone" placeholder="Telefon" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Durum</label>
                                    <input type="text" class="form-control" id="txtCompanyEditState" placeholder="Durum" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Açıklama *</label>
                                    <textarea class="form-control" id="txtCompanyEditDescription" rows="3" placeholder="Açıklama" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer pull-right">
                            <button id="btnCompanyUpdate" type="button" class="btn btn-fill btn-success">Güncelle</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_PartialWait")
<script src="~/Areas/DashBoard/Content/js/Custom/Search.js"></script>